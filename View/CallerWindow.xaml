<Window x:Class="BingoFlashboard.View.CallerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:local="clr-namespace:BingoFlashboard.View"
        mc:Ignorable="d"
        WindowStyle="None"
        Height="960"
        Background="{StaticResource Whitesmoke}"
        MouseDown="Window_MouseDown"
        Title="CallerWindow">
    <Window.Resources>
        <Storyboard x:Key="FlashingAnimation">
            <ColorAnimation Storyboard.TargetProperty="(Panel.Background).(SolidColorBrush.Color)"
                            From="Red"
                            To="Transparent"
                            Duration="0:0:0.5"
                            AutoReverse="True"
                            RepeatBehavior="Forever" />
        </Storyboard>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="200" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="350" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Border CornerRadius="10"
                Grid.RowSpan="4"
                Background="{StaticResource Whitesmoke}"
                BorderThickness="2"
                BorderBrush="White">
        </Border>


        <!--#region TOP BUTTONS (Close, Maximize)-->
        <Grid Grid.Row="0"
              Grid.ColumnSpan="2"
              Background="{StaticResource OxfordBlue}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="2*" />
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Stretch"
                        Grid.Column="0">
                <Button Style="{StaticResource TopMenuBtn}"
                        HorizontalAlignment="Left"
                        Margin="20,0,0,0"
                        Click="Exit_Click">
                    <Grid>
                        <iconPacks:PackIconMaterial Kind="Power"
                                                    Width="20"
                                                    Height="20"
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalAlignment="Center" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource TopMenuBtn}"
                        HorizontalAlignment="Left"
                        Margin="20,0"
                        Click="Maximize_Click">
                    <Grid>
                        <iconPacks:PackIconMaterial Kind="WindowMaximize"
                                                    Width="20"
                                                    Height="20"
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalAlignment="Center" />
                    </Grid>
                </Button>

                <Button Style="{StaticResource TopMenuBtn}"
                        HorizontalAlignment="Left"
                        Margin="0,0"
                        Click="Save_FlashboardSize">
                    <Grid>
                        <iconPacks:PackIconMaterial Kind="ContentSave"
                                                    Width="20"
                                                    Height="20"
                                                    Foreground="White"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Grid.Column="1"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center">

                <Label VerticalAlignment="Center"
                       VerticalContentAlignment="Center"
                       FontWeight="Bold"
                       Foreground="{StaticResource AccentBlue}"
                       Style="{StaticResource H2}"
                       Content="PROGRAM NAME: " />
                <Label Name="ProgramName"
                       Style="{StaticResource H1}"
                       Margin="40,0"
                       Foreground="White"
                       Content="" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Center"
                        Grid.Column="2">
                <Button x:Name="GoLiveBtn"
                        Style="{StaticResource ModernBtn}"
                        Width="160"
                        Content="{Binding HostingStatus.HostingGameBtn}"
                        Margin="20"
                        Click="GoLiveBtn_Click" />

                <Border BorderBrush="{StaticResource Mint}"
                        BorderThickness="2"
                        Margin="2">
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Stretch"
                                    Background="Black">

                            <Label Background="Black"
                                   BorderBrush="Black"
                                   BorderThickness="5"
                                   FontSize="16"
                                   Foreground="White"
                                   Padding="15,0,15,0"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Content="SERVER" />
                            <Label HorizontalContentAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   BorderBrush="{Binding BroadcastingStatus.BroadcastingColor}"
                                   BorderThickness="5"
                                   Background="White"
                                   FontSize="16"
                                   Padding="10,0"
                                   Foreground="{Binding BroadcastingStatus.BroadcastingColor}"
                                   FontWeight="Bold"
                                   Content="{Binding BroadcastingStatus.BroadcastingStatus}" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical"
                                    VerticalAlignment="Stretch"
                                    Background="Black">

                            <Label Background="Black"
                                   BorderBrush="Black"
                                   BorderThickness="5"
                                   FontSize="16"
                                   Foreground="White"
                                   Padding="15,0,15,0"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   Content="HOSTING" />
                            <Label HorizontalContentAlignment="Center"
                                   HorizontalAlignment="Center"
                                   VerticalContentAlignment="Center"
                                   BorderBrush="{Binding HostingStatus.HostingGameColor}"
                                   BorderThickness="5"
                                   Background="White"
                                   FontSize="16"
                                   Padding="10,0"
                                   Foreground="{Binding HostingStatus.HostingGameColor}"
                                   FontWeight="Bold"
                                   Content="{Binding HostingStatus.HostingGameStatus}" />
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </Grid>
        <!--#endregion TOP BUTTONS (Close, Maximize)-->

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>

            <!--#region Games List View-->
            <Grid Grid.Column="0">
                <ListView x:Name="gamesList"
                          MinHeight="150"
                          FontWeight="Bold"
                          FontSize="14"
                          SelectionChanged="GamesList_SelectionChanged">
                    <ListView.View>
                        <GridView x:Name="gamesGrid">
                            <GridViewColumn Header="| Game |"
                                            Width="100"
                                            DisplayMemberBinding="{Binding Name_}" />
                            <GridViewColumn Header="| Game Type| "
                                            Width="100"
                                            DisplayMemberBinding="{Binding GameType_}" />
                            <GridViewColumn Header="| Border Color |"
                                            Width="100"
                                            DisplayMemberBinding="{Binding Border_Color_.Name_}" />
                            <GridViewColumn Header="| Pattern Name |"
                                            Width="150"
                                            DisplayMemberBinding="{Binding Pattern_.Pattern_Name_}" />
                            <GridViewColumn Header="| Prize |"
                                            Width="50"
                                            DisplayMemberBinding="{Binding Prize_}" />
                            <GridViewColumn Header="| Designated Number |"
                                            Width="200"
                                            DisplayMemberBinding="{Binding Designated_Number_}" />
                            <GridViewColumn Header="| Jackpot Prize |"
                                            Width="100"
                                            DisplayMemberBinding="{Binding Jackpot_Prize_}" />
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <!--#endregion Games List View-->
        </Grid>

        <Grid Grid.Row="1"
              Grid.Column="1"
              Grid.RowSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>


            <Label Grid.Row="0"
                   Grid.ColumnSpan="4"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   FontSize="30"
                   FontWeight="ExtraBold"
                   Background="{StaticResource OxfordBlue}"
                   Foreground="{StaticResource OffWhite}"
                   Content="CALLER CONTROLS" />
            <Border BorderBrush="{StaticResource OxfordBlue}"
                    BorderThickness="3"
                    Grid.Column="0"
                    Grid.Row="1">
                <Grid Grid.Column="0"
                      Grid.Row="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="0">
                    <Grid Grid.Column="1">
                        <!--#region INTERMISSION SETTINGS-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Grid.Row="0">
                            <Label Style="{StaticResource H2}"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Center"
                                   Background="{StaticResource AccentBlue}"
                                   Margin="0"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Content="INTERMISSION SETTINGS" />

                            <StackPanel Orientation="Horizontal"
                                        Margin="20"
                                        HorizontalAlignment="Left">

                                <Label Style="{StaticResource LabelsMain}"
                                       Content="Intermission Type" />

                                <ComboBox Name="CB_Type"
                                          Margin="15,0,0,0"
                                          Background="White"
                                          Style="{StaticResource ModernComboBox}">
                                    <ComboBoxItem Name="start"
                                                  Content="Game Start" />
                                    <ComboBoxItem Name="intermission"
                                                  Content="Intermission" />
                                    <ComboBoxItem Name="nextgame"
                                                  Content="Next Game" />
                                </ComboBox>
                                <Label Style="{StaticResource LabelsMain}"
                                       Margin="20,0,0,0"
                                       Content="Minutes" />

                                <TextBox Name="Minutes"
                                         Margin="15,0,0,0"
                                         Height="35"
                                         Width="60"
                                         Foreground="Black"
                                         KeyDown="Intermission_Minutes_KeyDown"
                                         Style="{StaticResource ModernTextBox}" />
                            </StackPanel>
                        </StackPanel>

                        <!--#endregion INTERMISSION SETTINGS-->
                        <StackPanel Grid.Row="1">

                            <!--#region VERIFY CARD SECTION-->
                            <Label Style="{StaticResource H2}"
                                   HorizontalContentAlignment="Center"
                                   HorizontalAlignment="Stretch"
                                   Background="{StaticResource AccentBlue}"
                                   Foreground="White"
                                   FontWeight="Bold"
                                   Content="FLASHBOARD SETTINGS" />
                            <StackPanel Orientation="Horizontal"
                                        Margin="10,5"
                                        Name="FourBall"
                                        Visibility="{Binding FourBallVisibility}">

                                <Label Style="{StaticResource LabelsMain}"
                                       FontSize="12"
                                       Margin="10,0,10,0"
                                       Content="4 Ball Prize" />

                                <TextBox Name="FourBallPrize"
                                         Style="{StaticResource ModernTextBox}"
                                         Margin="20,0,0,0"
                                         Width="100" />
                            </StackPanel>

                            <StackPanel Orientation="Horizontal"
                                        Margin="10,5"
                                        Visibility="Visible">

                                <Label Style="{StaticResource LabelsMain}"
                                       Margin="10,0"
                                       Content="Flashboard Type" />

                                <ComboBox Name="CallerType"
                                          Style="{StaticResource ModernComboBox}"
                                          IsEnabled="{Binding EnableAutoCaller}"
                                          Margin="10,0">
                                    <ComboBoxItem Name="ManualCaller"
                                                  Content="Manual"
                                                  IsSelected="True" />
                                    <ComboBoxItem Name="AutomaticCaller"
                                                  Content="Automatic" />
                                </ComboBox>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Button Name="reset"
                                        Margin="10,5"
                                        Width="110"
                                        Style="{StaticResource ModernBtnDelete}"
                                        Content="Reset Board"
                                        Click="Reset_Board_Click" />
                                <Button Style="{StaticResource ModernBtn}"
                                        Margin="10,5"
                                        Width="110"
                                        Content="Hide Jackpot"
                                        Click="Hide_Jackpot_Click" />

                            </StackPanel>

                        </StackPanel>


                        <StackPanel Grid.Row="3"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch">
                            <Label Style="{StaticResource H2}"
                                   Background="{StaticResource AccentBlue}"
                                   Foreground="White"
                                   Margin="0"
                                   Grid.Row="0"
                                   HorizontalAlignment="Stretch"
                                   HorizontalContentAlignment="Center"
                                   FontWeight="Bold"
                                   Content="EXTRA SETTINGS" />
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center">
                                <Label Margin="0"
                                       Grid.Row="0"
                                       Style="{StaticResource LabelsMain}"
                                       Content="Four Ball Prize" />

                                <TextBox Name="FourBallTB"
                                         Margin="0,10"
                                         Width="100"
                                         FontSize="14"
                                         Style="{StaticResource ModernTextBox}" />

                            </StackPanel>

                            <Button Name="FourBallBtn"
                                    Style="{StaticResource ModernBtn}"
                                    Width="140"
                                    Content="Show FourBall"
                                    Click="FourBallBtn_Click" />
                        </StackPanel>
                    </Grid>
                </Grid>
            </Border>
            <!--#region GAME CONTROLS-->
            <Border Grid.Column="1"
                    Grid.Row="1"
                    BorderBrush="{StaticResource OxfordBlue}"
                    BorderThickness="2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0">

                        <Label HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Center"
                               Margin="0"
                               Background="{StaticResource AccentBlue}"
                               Foreground="White"
                               Style="{StaticResource H2}"
                               FontWeight="Bold"
                               Content="CURRENT GAME CONTROL" />


                        <StackPanel Name="ManualCallerEntry"
                                    Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,20">

                            <Label Style="{StaticResource LabelsMain}"
                                   Content="Enter Ball Num" />

                            <TextBox Name="Ball"
                                     Style="{StaticResource ModernTextBox}"
                                     Margin="20,0"
                                     KeyDown="Ball_KeyDown" />
                        </StackPanel>

                    </StackPanel>

                    <StackPanel Grid.Row="1">
                        <!--#region VERIFY CARD SECTION-->
                        <Label Style="{StaticResource H2}"
                               HorizontalContentAlignment="Center"
                               HorizontalAlignment="Stretch"
                               Background="{StaticResource AccentBlue}"
                               Foreground="White"
                               FontWeight="Bold"
                               Content="VERIFY CARD" />

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Width="350">
                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="0,10,50,0"
                                   Content="Card Set" />
                            <ComboBox Style="{StaticResource ModernComboBox}"
                                      DisplayMemberPath="Set_Name_"
                                      Name="CB_Cardset" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="20"
                                    Width="350">
                            <Label Margin="0,10,20,0"
                                   Style="{StaticResource LabelsMain}"
                                   Content="Card Number" />

                            <TextBox Name="VerifyTxtBox"
                                     Width="80"
                                     Style="{StaticResource ModernTextBox}"
                                     KeyDown="VerifyTxtBox_KeyDown" />

                            <Button Name="CheckCardBtn"
                                    Margin="20,0,0,0"
                                    Width="110"
                                    Style="{StaticResource ModernBtn}"
                                    Content="Check Card"
                                    Click="CheckCardBtn_Click" />
                        </StackPanel>
                        <!--#endregion VERIFY CARD SECTION-->
                    </StackPanel>

                    <StackPanel Grid.Row="2">
                        <Label HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Center"
                               Margin="0"
                               Background="{StaticResource AccentBlue}"
                               Foreground="White"
                               Style="{StaticResource H2}"
                               FontWeight="Bold"
                               Content="GAME SELECTION" />
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Height="60">
                            <Button Name="PreviousGame"
                                    Style="{StaticResource ModernBtn}"
                                    Margin="10"
                                    Content="Previous"
                                    Click="PreviousGame_Click" />
                            <Button Name="NextGameBtn"
                                    Style="{StaticResource ModernBtn}"
                                    Margin="10"
                                    Content="Next"
                                    Click="NextGameBtn_Click" />
                        </StackPanel>
                    </StackPanel>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1"
                              Grid.Row="2">
                        </Grid>
                    </Grid>
                </Grid>
            </Border>
            <!--#endregion-->
        </Grid>


        <Border Grid.Row="2"
                BorderBrush="{StaticResource OxfordBlue}"
                BorderThickness="2">
            <Grid Grid.Row="2">
                <!--#region Game Info-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--HEADERLABEL-->
                <Grid Grid.Row="0"
                      Grid.ColumnSpan="5">
                    <Label FontSize="18"
                           FontWeight="Bold"
                           Background="{StaticResource AccentBlue}"
                           Foreground="White"
                           HorizontalAlignment="Stretch"
                           HorizontalContentAlignment="Center"
                           Content="GAME DETAILS" />
                </Grid>

                <Grid Grid.Row="1"
                      Grid.Column="0">
                    <StackPanel>

                        <!--#region GameType-->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10">

                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Content="Game Type" />

                            <ComboBox Name="GameType"
                                      Margin="20,0,0,0"
                                      HorizontalAlignment="Center"
                                      SelectionChanged="GameType_SelectionChanged"
                                      Style="{StaticResource ModernComboBox}">

                                <ComboBoxItem Name="RegularCB"
                                              Content="Regular" />
                                <ComboBoxItem Name="ToonieBallCB"
                                              Content="Toonie Ball" />
                                <ComboBoxItem Name="MoneyBallCB"
                                              Content="Money Ball" />
                                <ComboBoxItem Name="DesignatedNumCB"
                                              Content="Designated Number" />
                                <ComboBoxItem Name="UPikEmCB"
                                              Content="U Pik Em" />
                            </ComboBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="0,10">
                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Width="90"
                                   Content="Game Name" />

                            <TextBox Name="GameName"
                                     Margin="10,2"
                                     Height="30"
                                     Width="150"
                                     FontSize="14"
                                     KeyDown="Enter_Click"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding SelectedGame.Name_}" />
                        </StackPanel>
                        <!--#endregion GameType-->
                        <!--#region Game, BorderColor, Pattern, Prize-->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="10,10">

                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Content="Border Color" />

                            <xctk:ColorPicker Name="Border_Color_Picker"
                                              Width="50" />

                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Width="120"
                                   Content="Border Color Name" />

                            <TextBox Name="BorderColorName"
                                     Margin="10,2"
                                     Height="30"
                                     FontSize="14"
                                     KeyDown="Enter_Click"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding SelectedGame.Border_Color_.Name_}" />

                        </StackPanel>
                        <!--#endregion Game, BorderColor, Pattern, Prize-->
                        <!--#region Game, BorderColor, Pattern, Prize-->
                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="10,10">

                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Content="Font Color" />

                            <xctk:ColorPicker Name="Font_Color_Picker"
                                              Width="50"></xctk:ColorPicker>

                            <Label Style="{StaticResource LabelsMain}"
                                   Margin="20,0,0,0"
                                   Width="120"
                                   Content="Font Color Name" />

                            <TextBox Name="FontColorName"
                                     Margin="10,2"
                                     Height="30"
                                     FontSize="14"
                                     KeyDown="Enter_Click"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding SelectedGame.Font_Color_.Name_}" />

                        </StackPanel>

                        <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    Margin="10,10">
                            <!--#region Game, BorderColor, Pattern, Prize-->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,10">

                                <Label Style="{StaticResource LabelsMain}"
                                       Margin="20,0,0,0"
                                       Content="Pattern" />

                                <ComboBox Name="PatternCB"
                                          Style="{StaticResource ModernComboBox}"
                                          DisplayMemberPath="Pattern_Name_"
                                          FontWeight="Bold"
                                          Margin="20,0,0,0" />

                            </StackPanel>
                            <!--#endregion Game, BorderColor, Pattern, Prize-->

                            <!--#region Game, BorderColor, Pattern, Prize-->
                            <StackPanel Orientation="Horizontal"
                                        HorizontalAlignment="Center"
                                        Margin="0,10">

                                <Label Style="{StaticResource LabelsMain}"
                                       Margin="20,0,0,0"
                                       Content="Prize" />

                                <TextBox Name="Prize"
                                         Margin="10,0"
                                         Height="30"
                                         Width="100"
                                         FontSize="14"
                                         KeyDown="Enter_Click"
                                         Style="{StaticResource ModernTextBox}"
                                         Text="{Binding SelectedGame.Prize_}" />

                            </StackPanel>
                            <!--#endregion Game, BorderColor, Pattern, Prize-->
                        </StackPanel>
                        <!--#endregion Game, BorderColor, Pattern, Prize-->
                    </StackPanel>
                </Grid>

                <!--#region Game Info-->
                <Grid Grid.Row="1"
                      Grid.Column="1">
                    <StackPanel Width="auto">


                        <!--#region Prize, Number-->
                        <StackPanel Orientation="Horizontal"
                                    Name="JackpotGameSection"
                                    Visibility="{Binding JackpotGameSection}"
                                    HorizontalAlignment="Center">

                            <Label Name="JackpotLbl"
                                   Style="{StaticResource LabelsMain}"
                                   Margin="20,5"
                                   Content="Jackpot Prize" />

                            <TextBox Name="JackpotPrize"
                                     Height="30"
                                     Width="100"
                                     Margin="15,10"
                                     HorizontalAlignment="Left"
                                     FontSize="14"
                                     KeyDown="Enter_Click"
                                     Style="{StaticResource ModernTextBox}"
                                     Text="{Binding SelectedGame.Jackpot_Prize_}" />
                        </StackPanel>
                        <!--#endregion Prize, Number-->

                        <!--#region Prize, Number-->
                        <StackPanel Orientation="Horizontal"
                                    Visibility="{Binding JackpotGameSection}"
                                    HorizontalAlignment="Center">

                            <Label Name="DesignatedNumLbl"
                                   Margin="15,5"
                                   Style="{StaticResource LabelsMain}"
                                   Content="Jackpot Number" />

                            <TextBox Name="JackpotNum"
                                     HorizontalAlignment="Left"
                                     Margin="15,0"
                                     FontSize="14"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="30"
                                     Width="100"
                                     KeyDown="Enter_Click"
                                     Text="{Binding SelectedGame.Designated_Number_}" />
                        </StackPanel>
                        <!--#endregion Prize, Number-->


                        <!--#region UpdateBtn DeleteBtn-->
                        <StackPanel Orientation="Horizontal"
                                    Height="70"
                                    HorizontalAlignment="Center">
                            <Button HorizontalAlignment="Right"
                                    Margin="20,0"
                                    Style="{StaticResource ModernBtnStart}"
                                    Content="Update"
                                    Click="Update_Game_Click" />

                            <Button Style="{StaticResource ModernBtnDelete}"
                                    Content="Delete"
                                    Click="Delete_Game_Click" />

                        </StackPanel>
                        <!--#endregion-->

                        <!--#region LoadNewSession StartSession-->
                        <Grid HorizontalAlignment="Center">
                            <Button Grid.Column="0"
                                    Margin="10"
                                    Width="160"
                                    Style="{StaticResource ModernBtn}"
                                    Content="Load New Session"
                                    Click="Load_New_Session_Click" />
                        </Grid>
                        <!--#endregion LoadNewSession StartSession-->

                    </StackPanel>

                </Grid>

                <!--#endregion Game Info-->

            </Grid>
        </Border>
        <!--#endregion MAIN GRID-->

        <Grid Grid.Row="3"
              Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="60" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0"
                   Grid.ColumnSpan="2"
                   HorizontalContentAlignment="Center"
                   VerticalContentAlignment="Center"
                   FontSize="30"
                   FontWeight="ExtraBold"
                   Background="{StaticResource OxfordBlue}"
                   Foreground="{StaticResource OffWhite}"
                   Content="SERVER MESSAGES" />
            <Grid Grid.Row="1"
                  HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Border BorderBrush="{StaticResource OxfordBlue}"
                        BorderThickness="2"
                        Grid.Column="0">
                    <ListView Grid.Row="1"
                              Name="ServerMessagesList"
                              HorizontalAlignment="Stretch"
                              MinWidth="1000"
                              FontSize="16"
                              FontWeight="Bold"
                              Foreground="Black"
                              ItemsSource="{Binding ServerMessages, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                              HorizontalContentAlignment="Left" />
                </Border>
                <!--#region BINGO CALLED OVERLAY-->
                <Grid x:Name="BingoOverlay"
                      Background="#A0000000"
                      Visibility="Collapsed"
                      MouseUp="OnOverlayClick">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <TextBlock Grid.Row="0"
                               Text="BINGO CALLED"
                               Foreground="White"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="48"
                               FontWeight="Bold" />
                </Grid>
                <!--#endregion BINGO CALLED OVERLAY-->
                <Border BorderBrush="{StaticResource OxfordBlue}"
                        BorderThickness="2"

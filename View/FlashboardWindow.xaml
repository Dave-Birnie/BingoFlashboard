<Window x:Class="BingoFlashboard.View.FlashboardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BingoFlashboard.Data"
        xmlns:VM="clr-namespace:BingoFlashboard.ViewModel"
        mc:Ignorable="d"
        Title="FlashboardWindow"
        Height="880"
        Width="1830"
        Background="{Binding BorderColor}">
    <Window.DataContext>
        <VM:FlashboardViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="\Images\background.png"></ImageBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="3.4*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="1.7*" />
        </Grid.RowDefinitions>

        <!--#region Left Info Bar-->
        <Grid Grid.Row="0"
              Grid.RowSpan="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.2*" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="1.2*" />
                </Grid.RowDefinitions>

                <!--#region Top Section-->
                <Grid Grid.Row="0"
                      Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Margin="0,0,0,0">
                    <Border BorderBrush="White"
                            Background="Black"
                            BorderThickness="14">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.5*" />
                                <RowDefinition Height="4*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1.6*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="3">
                                <Label HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="30"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Name="GameName"
                                       Content="{Binding GameName}" />

                            </Grid>

                            <!--#region MINI GRID-->
                            <Frame Grid.Row="1"
                                   Grid.Column="1"
                                   Name="MiniGrid" />
                            <!--#endregion MINI GRID-->

                            <!--#region PATTERN NAME-->
                            <Grid Grid.Row="3"
                                  Grid.Column="0"
                                  Grid.ColumnSpan="3">
                                <Label HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Foreground="White"
                                       Name="Pattern"
                                       Content="{Binding PatternName}" />
                            </Grid>
                            <!--#endregion PATTERN NAME-->

                        </Grid>
                    </Border>
                </Grid>
                <!--#endregion END TOPSECTION-->

                <!--#region Middle Section-->
                <Grid Grid.Row="1"
                      Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Border BorderBrush="White"
                            BorderThickness="1 0 0 0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1.1*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="1.4*" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0">
                                <Label Name="PrizeLbL"
                                       HorizontalAlignment="Stretch"
                                       Padding="150,5,0,0"
                                       VerticalAlignment="Top"
                                       FontSize="40"
                                       FontWeight="Bold"
                                       Foreground="{Binding FontColor}">
                                    PRIZE
                                </Label>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2.5*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Label HorizontalAlignment="Right"
                                               VerticalAlignment="Top"
                                               HorizontalContentAlignment="Right"
                                               Name="Prize"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Foreground="{Binding FontColor}">
                                            $200
                                        </Label>
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Label HorizontalAlignment="Stretch"
                                               VerticalAlignment="top"
                                               Name="PatternName"
                                               Padding="25,10,0,0"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{Binding FontColor}"
                                               Content="{Binding PatternName}" />
                                    </Grid>
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="2"
                                  HorizontalAlignment="Stretch"
                                  VerticalAlignment="Top">

                                <Grid Name="JackpotSection"
                                      Visibility="{Binding JackpotSectionVisibility}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2.2*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Column="0">
                                        <Label Name="JackpotPrize"
                                               VerticalAlignment="Top"
                                               HorizontalAlignment="Left"
                                               Padding="0,2,0,0"
                                               Margin="20,0,0,0"
                                               FontSize="30"
                                               FontWeight="Bold"
                                               Visibility="{Binding JackpotVisibility}"
                                               Foreground="{Binding FontColor}"
                                               Content="{Binding JackpotPrize}" />
                                    </Grid>
                                    <Grid Grid.Column="1">
                                        <Label HorizontalAlignment="Left"
                                               VerticalAlignment="Center"
                                               Padding="15,2,0,0"
                                               FontSize="20"
                                               FontWeight="Bold"
                                               Foreground="{Binding FontColor}"
                                               Visibility="Visible"
                                               Name="JackpotLbL"
                                               Content="{Binding GameType}">
                                        </Label>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
                <!--#endregion-->

                <!--#region Bottom Section-->
                <Grid Grid.Row="2"
                      Grid.Column="0"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch">
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="70" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Label Name="DesignatedLbl"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="0,0,0,0"
                                   Height="70"
                                   Foreground="{Binding FontColor}"
                                   FontWeight="Bold"
                                   FontSize="40"
                                   Visibility="{Binding DesignatedMoneyBallLblVisibility}"
                                   FontFamily="Browallia New"
                                   Content="{Binding GameType}" />
                        </Grid>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="203*" />
                                <ColumnDefinition Width="29*" />
                                <ColumnDefinition Width="113*" />
                            </Grid.ColumnDefinitions>
                            <Image Name="MoneyBallImg"
                                   HorizontalAlignment="Center"
                                   Margin="80,0,80,-0.2"
                                   Source="{Binding MoneyBall}"
                                   Visibility="{Binding MoneyBallVisibility}"
                                   Grid.ColumnSpan="3" />

                            <Label Name="DesignatedNumber"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="70,0,70,-0.2"
                                   Foreground="{Binding FontColor}"
                                   FontWeight="Bold"
                                   FontSize="160"
                                   FontFamily="Browallia New"
                                   Grid.ColumnSpan="3" />

                            <Grid Grid.ColumnSpan="3"
                                  Name="UPikEm"
                                  Visibility="{Binding UPikEmVisibility}">
                                <StackPanel>
                                    <Label Content="Over 20 #'s"
                                           HorizontalAlignment="Center"
                                           FontSize="40"
                                           Foreground="{Binding FontColor}" />
                                    <Label Content="50/50"
                                           FontSize="80"
                                           HorizontalAlignment="Center"
                                           Foreground="{Binding FontColor}" />
                                </StackPanel>
                            </Grid>

                        </Grid>
                        <Grid Grid.Row="2"
                              Visibility="{Binding FourBallSectionVisibility}"
                              HorizontalAlignment="Center">
                            <StackPanel Orientation="Horizontal">
                                <Label HorizontalAlignment="Right"
                                       VerticalAlignment="Top"
                                       HorizontalContentAlignment="Right"
                                       Name="FourBallLbl"
                                       FontSize="25"
                                       FontWeight="Bold"
                                       Foreground="{Binding FontColor}"
                                       Content="Four Ball - $" />

                                <Label HorizontalAlignment="Right"
                                       VerticalAlignment="Center"
                                       HorizontalContentAlignment="Right"
                                       Name="FourBallPrize"
                                       FontSize="25"
                                       FontWeight="Bold"
                                       Foreground="{Binding FontColor}"
                                       Content="{Binding FourBallPrize}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </Grid>
                <!--#endregion-->

            </Grid>
        </Grid>
        <!--#endregion-->

        <!--#region Bottom Info Bar-->
        <Grid Grid.Row="3"
              Grid.Column="1"
              Grid.ColumnSpan="3">

        </Grid>
        <!--#endregion Bottom Info Bar-->

        <!--#region Numbers-->
        <Grid Grid.Row="0"
              Grid.RowSpan="2"
              Grid.Column="1"
              Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="5" />
            </Grid.RowDefinitions>

            <!--#region FLASHBOARD-->

            <!--#region HEADER-->
            <Grid Name="Border4"
                  Grid.Row="0"
                  Grid.Column="1"
                  HorizontalAlignment="Stretch"
                  Grid.ColumnSpan="17"
                  Background="{Binding BorderColor}"
                  Margin="24 0 0 0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Label Name="CallOrTextLbl"
                       Padding="0,5,20,0"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontWeight="Bold"
                       Foreground="{Binding FontColor}"
                       FontSize="30"
                       Content="{Binding HallFlashboardMessage}" />
                <Label Grid.Column="1"
                       Name="PhoneNumLbl"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"
                       Foreground="{Binding FontColor}"
                       FontSize="45"
                       Content="{Binding HallNumber}" />

            </Grid>
            <Grid Grid.Row="1"
                  Grid.Column="1"
                  Grid.RowSpan="5">
                <Border Name="Border3"
                        Background="{Binding BorderColor}"
                        Margin="40 0 40 0" />

            </Grid>
            <Grid Name="Border1"
                  Grid.Row="7"
                  Grid.Column="1"
                  Grid.ColumnSpan="17"
                  Background="{Binding BorderColor}" />
            <Grid Name="Border2"
                  Grid.Row="0"
                  Grid.Column="18"
                  Grid.RowSpan="7"
                  Background="{Binding BorderColor}" />

